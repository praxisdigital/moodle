{{!
    @template pluginfullname/recordings_table2

    Mustache description

    Example context (json):
    {}
}}
<table class="table-striped">
    <thead>
        <tr>
            <th scope="col">Playback</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            {{#preview}}
                <th scope="col">Preview</th>
            {{/preview}}
            <th scope="col">Date</th>
            <th scope="col">Duration</th>
            {{#rows}}
                {{#actionbar}}
                <th scope="col">Toolbar</th>
                {{/actionbar}}
            {{/rows}}
        </tr>
    </thead>
    <tbody>
    {{#rows}}
            <td>{{{playback}}}</td>
            <td>{{{recording}}}</td>
            <td>{{{description}}}</td>
            {{#preview}}
                <td>{{{preview}}}</td>
            {{/preview}}
            <td>{{#userdate}} {{date}}, {{#str}} strftimedate, core_langconfig {{/str}} {{/userdate}}</td>
            <td>{{duration}}</td>
            {{#actionbar}}
                <td>
                    {{{actionbar}}}
                </td>
            {{/actionbar}}
        </tbody>
    {{/rows}}
    {{^rows}}
        <p>No Recordings found for this course.</p>
    {{/rows}}
    </tbody>
</table>
