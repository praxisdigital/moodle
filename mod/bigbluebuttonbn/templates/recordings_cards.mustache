{{!
    @template pluginfullname/recordings_cards

    Mustache description

    Example context (json):
    {}
}}
<ul class="section-items">
    {{#cards}}
        <li class="card section-item">
            <div class="card-body d-flex justify-content-between flex-column">
                <div class="mx-4">
                    <div>{{{recording}}}</div>
                    <div>{{#shortentext}} 100, {{{description}}} {{/shortentext}}</div>
                    {{{playback}}}
                </div>
                <div class="mx-2 misc-info align-items-end">{{#userdate}} {{date}}, {{#str}} strftimedate, core_langconfig {{/str}} {{/userdate}} <span class="card-text float-end">{{duration}} min</span></div>
            </div>
            {{#actionbar}}
                <div class="card-footer">
                    {{{actionbar}}}
                </div>
            {{/actionbar}}
        </li>
    {{/cards}}
    {{^cards}}
        <p>No Recordings found for this course.</p>
    {{/cards}}
</ul>
